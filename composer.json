{
    "name": "ferranfg/base",
    "description": "",
    "keywords": [
        "ferranfg",
        "base"
    ],
    "homepage": "https://github.com/ferranfg/base",
    "license": "MIT",
    "authors": [
        {
            "name": "Ferran Figueredo",
            "email": "hola@ferranfigueredo.com",
            "homepage": "https://ferranfigueredo.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "barryvdh/laravel-debugbar": "^3.5",
        "darryldecode/cart": "^4.2",
        "fiveam-code/laravel-notion-api": "^0.8.0",
        "google/cloud-error-reporting": "^0.16.5",
        "google/cloud-logging": "^1.20",
        "imagekit/imagekit": "^1.2",
        "intervention/image": "^2.5",
        "laravel/nova": "^3.32",
        "livewire/livewire": "^2.0",
        "ramsey/uuid": "^4.3",
        "snoeren-development/laravel-discord-webhook-channel": "^1.5",
        "soved/laravel-gdpr": "^1.5",
        "spatie/laravel-cookie-consent": "^3.2",
        "spatie/laravel-feed": "^4.1",
        "spatie/laravel-google-cloud-storage": "^2.0",
        "spatie/laravel-tags": "^4.3",
        "unsplash/unsplash": "^3.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Ferranfg\\Base\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ferranfg\\Base\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ferranfg\\Base\\BaseServiceProvider"
            ],
            "aliases": {
                "Base": "Ferranfg\\Base\\BaseFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
